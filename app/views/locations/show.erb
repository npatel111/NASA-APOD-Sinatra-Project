<%=@location.date_traveled%><br>
<%=@location.explanation%><br><br>
<%=@location.title%><br>
Aliens that live here:<br><br>
<%@location.aliens.each do |alien|%>
  Alien name: <%=alien.name%><br>
  <%alien.messages.each do |message|%>
    Message: <%=message.content%><br>
  <%end%>
  <br>
<%end%>

<br>
<%if @location.url.include?("youtube")%>
  <iframe width="420" height="315"
  src="<%=@location.url%>"></iframe>
<%else%>
  <img src="<%=@location.url%>" alt="<%=@location.title%>" >
<%end%>

<a href="/locations/<%=@location.id%>/edit">Edit</a>
<form method="post" action="/locations/<%=@location.id%>/delete">
  <input id="hidden" type="hidden" name="_method" value="delete">
  <input type="submit" value="delete">
</form>
