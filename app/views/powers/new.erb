<form action="/powers" method="post" >
  Power name: <input type="text" name="name" /><br>
  Pick the aliens who have this power: <br>
  <%Alien.all.each do |alien| %>
    <input type="checkbox" name="alien_ids[]" id="<%=alien.id%>" value="<%=alien.id%>"><%=alien.name%></input>
    <br>
  <%end%>
  <input type="submit" value="submit" />
</form>
